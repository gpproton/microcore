{
    "name": "microframe/core",
    "description": "A simplistic micro framework library",
    "keywords": ["library", "framework", "MVC", "micro", "cli"],
    "homepage": "https://github.com/gpproton/microcore",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Godwin peter .O",
            "email": "me@godwin.dev",
            "homepage": "https://godwin.dev",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/gpproton/microcore/issues",
        "source": "https://github.com/gpproton/microcore"
    },
    "config": {
        "platform": {"php": "7.4"},
        "sort-packages": true,
        "archive-format": "zip",
        "archive-dir": "Build/Release"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "microframe\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/",
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "symfony/finder": "5.1.*",
        "symfony/process": "5.1.*",
        "symfony/serializer": "3.4.*",
        "symfony/yaml": "5.1.*",
        "hassankhan/config": "2.1.*",
        "phpfastcache/phpfastcache": "8.0.*",
        "predis/predis": "1.1.*",
        "taq/pdooci": "1.0.*",
        "zircote/swagger-php": "3.0.*",
        "cebe/markdown": "1.2.*"
    },
    "require-dev": {
        "filp/whoops": "2.7.*",
        "opsway/psr12-strict-coding-standard": "0.4.*",
        "phpunit/phpunit": "7.5.*",
        "friendsofphp/php-cs-fixer": "2.16.*",
        "squizlabs/php_codesniffer": "3.5.*"
    },
    "suggest": {
        "ext-apache": "*",
        "ext-pcntl": "Required to use all features of the queue worker.",
        "ext-posix": "Required to use all features of the queue worker.",
        "ext-redis": "Required to use the Redis cache and queue drivers (^4.0|^5.0).",
        "mockery/mockery": "Required to use mocking (^1.3.1)."
    },
    "scripts": {
        "post-install-cmd": [

        ],
        "post-update-cmd": [

        ],
        "post-autoload-dump": [
            
        ],
        "post-create-project-cmd": [

        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "check": "phpcs",
        "fix": "phpcbf",
        "doc": ""
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
